<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>site</display-name>
  <filter>
    <filter-name>sitemesh</filter-name>
    <filter-class>com.opensymphony.sitemesh.webapp.SiteMeshFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>sitemesh</filter-name>
    <url-pattern>*.do</url-pattern>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
    <servlet>
    <servlet-name>DBCPInit</servlet-name>
    <servlet-class>jdbc.DBCPInit</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
	<servlet-name>ControllerUsingURI</servlet-name>
	<servlet-class>controller.khintranet.ControllerUsingURI</servlet-class>
	<init-param>
		<param-name>propertyConfig</param-name>
		<param-value>/WEB-INF/commandHandlerURI.properties</param-value>
	</init-param>
</servlet>
<servlet-mapping>
	<servlet-name>ControllerUsingURI</servlet-name>
	<url-pattern>*.do</url-pattern>
</servlet-mapping>
  <servlet>
	<servlet-name>ControllerAjaxURI</servlet-name>
	<servlet-class>controller.khintranet.ControllerAjaxURI</servlet-class>
	<init-param>
		<param-name>ajaxConfig</param-name>
		<param-value>/WEB-INF/commandAjaxURI.properties</param-value>
	</init-param>
</servlet>
	
<servlet-mapping>
	<servlet-name>ControllerAjaxURI</servlet-name>
	<url-pattern>*.ajax</url-pattern>
</servlet-mapping>
<session-config>
   <session-timeout>60</session-timeout>
</session-config>
